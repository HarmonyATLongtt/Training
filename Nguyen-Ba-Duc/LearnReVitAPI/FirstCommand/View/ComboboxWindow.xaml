<Window x:Class="FirstCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FirstCommand"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Main Window"
        Height="300"
        Width="300">
    <StackPanel Width="200">
        <Label Content="Active View"></Label>
        <Separator />
        <StackPanel Orientation="Horizontal">
            <Label Content="Name: "></Label>
            <TextBlock x:Name="tbName"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Id: "></Label>
            <TextBlock x:Name="tbId"></TextBlock>
        </StackPanel>
        <TextBox x:Name="tbBtn"></TextBox>
        <Button Margin="10" Content="Ok" Width="50" Click="SetViewName" />
    </StackPanel>
</Window>