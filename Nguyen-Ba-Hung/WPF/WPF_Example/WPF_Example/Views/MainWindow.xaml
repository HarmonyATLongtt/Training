<Window x:Class="WPF_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="OnKeyEscape">
    <Grid>
        <Button Content="Import Excel" HorizontalAlignment="Left" Margin="253,397,0,0" VerticalAlignment="Top" Name="btnImport"/>
        <Button Content="Export Excel" HorizontalAlignment="Left" Margin="515,397,0,0" VerticalAlignment="Top" Name="btnExport"/>
        <DataGrid HorizontalAlignment="Left" Height="360" Margin="167,17,0,0" VerticalAlignment="Top" Width="580" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ListView HorizontalAlignment="Left" Height="360" Margin="23,17,0,0" VerticalAlignment="Top" Width="130" d:ItemsSource="{d:SampleData ItemCount=5}" RenderTransformOrigin="0.5,0.5" />
    </Grid>
</Window>
