<Window x:Class="VD_Bingding_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VD_Bingding_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txbSource" VerticalAlignment="Top" Text="Giang Nguyễn"></TextBox>
        <TextBox x:Name="txbBinding" VerticalAlignment="Center" Text="{Binding Path=Text, ElementName=txbSource}"></TextBox>
        <Button x:Name="btBinding" VerticalAlignment="Bottom" Content="{Binding ButtonName}" ></Button>
    </Grid>
</Window>
