<Window x:Class="Border_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Border_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Width="400">
            <Border BorderThickness="10, 5, 30, 5" BorderBrush="#FF71D354">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF402B9E" Offset="0.507" />
                        <GradientStop Color="#FF98AE38" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <Button Content="1" FontSize="30" Height="50" />
                    <Button Content="2" FontSize="30" Height="50" />
                    <Button Content="3" FontSize="30" Height="50" />
                    <Button Content="4" FontSize="30" Height="50" />
                    <Button Content="5" FontSize="30" Height="50" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>